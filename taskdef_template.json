{
  "executionRoleArn": "$TASK_EXECUTION_ROLE_ARN",
  "containerDefinitions": [
    {
      "name": "sandbox-nest",
      "image": "<IMAGE_NAME>",
      "essential": true,
      "portMappings": [
        {
          "protocol": "tcp",
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "environment": [
        {
          "name": "ENV",
          "value": "$ENV"
        },
        {
          "name": "AWS_LOCALSTACK_REGION",
          "value": "ap-northeast-1"
        },
        {
          "name": "AWS_LOCALSTACK_ENDPOINT",
          "value": "$AWS_LOCALSTACK_ENDPOINT"
        },
        {
          "name": "SQS_QUEUE_URL",
          "value": "$SQS_QUEUE_URL"
        },
        {
          "name": "SLACK_WORKFLOW_URL",
          "value": "$SLACK_WORKFLOW_URL"
        },
        {
          "name": "NOTION_SECRET",
          "value": "$NOTION_SECRET"
        },
        {
          "name": "NOTION_DATABASE_ID",
          "value": "$NOTION_DATABASE_ID"
        },
        {
          "name": "PORT",
          "value": "80"
        },
        {
          "name": "NEW_RELIC_APP_NAME",
          "value": "$NEW_RELIC_APP_NAME"
        },
        {
          "name": "NEW_RELIC_DISTRIBUTED_TRACING_ENABLED",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "NEW_RELIC_LICENSE_KEY",
          "valueFrom": "$NEW_RELIC_LICENSE_KEY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sandbox-nest",
          "awslogs-region": "ap-northeast-1",
          "awslogs-create-group": "true",
          "awslogs-stream-prefix": "firelens"
        }
      }
    },
    {
      "name": "newrelic-infra",
      "image": "newrelic/nri-ecs:1.9.9",
      "cpu": 256,
      "memoryReservation": 512,
      "environment": [
        {
          "name": "NRIA_OVERRIDE_HOST_ROOT",
          "value": ""
        },
        {
          "name": "NRIA_IS_FORWARD_ONLY",
          "value": "true"
        },
        {
          "name": "FARGATE",
          "value": "true"
        },
        {
          "name": "NRIA_PASSTHROUGH_ENVIRONMENT",
          "value": "ECS_CONTAINER_METADATA_URI,ECS_CONTAINER_METADATA_URI_V4,FARGATE"
        },
        {
          "name": "NRIA_CUSTOM_ATTRIBUTES",
          "value": "{\"nrDeployMethod\":\"downloadPage\"}"
        }
      ],
      "secrets": [
        {
          "name": "NRIA_LICENSE_KEY",
          "valueFrom": "$NEW_RELIC_LICENSE_KEY"
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "1024",
  "family": "$TASK_FAMILY"
}
